<div class="well">

  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Post Title' %>
      <%= f.text_field :title, :placeholder => 'Post Title', :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :post_text, 'Post Text' %>
      <%= f.text_area :post_text, rows: 5, :placeholder => 'Enter Comment', :class => 'form-control' %>
    </div>
    <%=f.submit :class => 'btn btn-success' %>
  <% end %>

</div>
